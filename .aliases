alias ls='ls --color=auto --group-directories-first'
alias ll='ls -laF'
alias grep='grep --color=auto'

alias refresh='source ~/.bashrc'

# http://www.nurkiewicz.com/2012/09/accessing-clipboard-in-linux-terminal.html
# ps | ctrlc
alias ctrlc='xclip -selection c'
alias ctrlv='xclip -selection c -o'

alias df='df -H'
alias du='du -ch'
alias path="echo $PATH | tr ':' '\n'"
alias cdpath="echo $CDPATH | tr ':' '\n'"

alias mount='mount | column -t'
alias ping='ping -c 5'
alias wget='wget -c'

if cmd_exists php; then
    alias phps='php -S localhost:8000'
    # then just phps public/index.php

    alias sf='bin/console'
    alias cache='sf cache:clear'
    alias routes='sf debug:router'
    alias services='sf debug:container'

    # Disable glob expansion for Puli
    alias puli='set -f;puli';puli() { command puli "$@";set +f; }
fi

alias clog='echo "" > ~/workspace/debug.log'

alias top_process='ps -eo pcpu,pid,user,args | sort -k 1 -r | head -5'
alias hogs='for i in G M K; do du -ah | grep [0-9]$i | sort -nr -k 1; done | head -n 11'

alias meteo='curl -4 http://wttr.in/Paris'
