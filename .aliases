hash colordiff >/dev/null 2>&1 && alias diff='colordiff -u'

hash htop >/dev/null 2>&1 && alias top=htop

alias ls='ls --color=auto'
alias ll='ls -laF ${colorflag}'
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"
alias grep='grep --color=auto'

alias refresh='source ~/.bashrc'
alias update='~/workspace/baruica/dotfiles/update.sh'

# http://www.nurkiewicz.com/2012/09/accessing-clipboard-in-linux-terminal.html
# ps | ctrlc
alias ctrlc='xclip -selection c'
alias ctrlv='xclip -selection c -o'

alias df='df -H'
alias du='du -ch'
alias path="echo $PATH | tr ':' '\n'"
alias cdpath="echo $CDPATH | tr ':' '\n'"

alias mount='mount | column -t'
alias ping='ping -c 5'
alias wget='wget -c'

hash php >/dev/null 2>&1 && alias sf='bin/console'
hash php >/dev/null 2>&1 && alias cache='sf cache:clear'
hash php >/dev/null 2>&1 && alias routes='sf debug:router'
hash php >/dev/null 2>&1 && alias services='sf debug:container'

# Disable glob expansion for Puli
alias puli='set -f;puli';puli(){ command puli "$@";set +f;}

alias clog='echo "" > ~/workspace/debug.log'

alias phps='php -S localhost:8000'
# then just phps public/index.php

alias top_process='ps -eo pcpu,pid,user,args | sort -k 1 -r | head -5'
alias hogs='for i in G M K; do du -ah | grep [0-9]$i | sort -nr -k 1; done | head -n 11'

alias aptclean='echo "Cleaning Up" && sudo apt-get -f install && sudo apt-get -y autoremove && sudo apt-get -y autoclean && sudo apt-get -y clean'

alias meteo='curl -4 http://wttr.in/Paris'
