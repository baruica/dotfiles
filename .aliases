# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls -hF --color=auto'  # force ls to always use color and type indicators
fi

alias ll='ls -lsa'

alias cli='php app/console'
alias cache='cli cache:clear'
alias routes='cli router:debug'

alias clog='echo "" > ~/www/dev.log'

alias path="echo $PATH | tr ':' '\n'"

# use colordiff instead of diff if available
command -v colordiff >/dev/null 2>&1 && alias diff="colordiff -u"

# use htop instead of top if installed
command -v htop >/dev/null 2>&1 && alias top=htop
