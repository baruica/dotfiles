[alias]
    ci  = commit
    co  = checkout
    dc  = diff --cached  # Display the staged changes
    st  = status

    lg   = log --oneline --graph --decorate --pretty=tformat:'%Cred%h%Creset -%C(cyan)%d %Creset%s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
    plog = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
    tlog = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative

    changes = diff --name-status

    # Remove all merged branches
    bdm = "!git branch --merged | grep -v '*' | xargs -n 1 git branch -d"

    whatsnew = "!git diff origin/$(git currentbranch)...HEAD"
    whatscoming = "!git diff HEAD...origin/$(git currentbranch)"
    currentbranch = "!git branch | grep \"^\\*\" | cut -d \" \" -f 2"
    rank = shortlog -sn --no-merges     # Contributors ordered by number of merges
[branch]
    autosetuprebase = always
    rebase = true
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta       = yellow
    frag       = magenta
    old        = red
    new        = green
    whitespace = red reverse
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[core]
    autocrlf     = input
    editor       = vi
    excludesfile = ~/workspace/baruica/dotfiles/git/.gitignore
    pager        = less -FRSX
    whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[credential]
    helper = cache --timeout=43200
[diff]
    mnemonicPrefix = true
    renames = true
[fetch]
    prune = true
[format]
    pretty = oneline
[github]
    user = baruica
[help]
    autocorrect = 1
[init]
    templatedir = ~/.git_template/template
[log]
    abbrevCommit = true
[pull]
    rebase = preserve
[push]
    default = simple
[rebase]
    autostash = true
[status]
    submoduleSummary = true
    showUntrackedFiles = all
[tag]
    sort = version:refname
