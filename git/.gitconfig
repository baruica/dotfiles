[alias]
    ci = commit
    co = checkout
    df = diff
    st = status
    lg = log --color --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
    oops = commit --amend --no-edit

    changes = diff --name-status
    wdiff   = diff --word-diff

    # Cancel
    undo    = reset HEAD^ --soft
    unstage = reset HEAD --
    # The -a adds any modifications and deletions of existing files to the commit but ignores brand new files
    amend   = commit -a --amend
[branch]
    autosetuprebase = always
[color]
    ui    = auto
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta       = yellow
    frag       = magenta
    old        = red
    new        = green
    whitespace = red reverse
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[core]
    autocrlf     = input
    safecrlf     = true
    excludesfile = ~/dotfiles/git/.gitignore
    filemode     = false
    pager        = less -FRSX
    whitespace   = fix,-indent-with-non-tab,-trailing-space,cr-at-eol
[credential]
    helper = cache --timeout=43200
[diff]
    mnemonicPrefix = true
    renames = true
[format]
    pretty = oneline
[help]
    autocorrect = -1
[log]
    abbrevCommit = true
[merge]
    conflictStyle = diff3
[pull]
    rebase = preserve
[push]
    default = upstream
[rebase]
    autostash = true
[status]
    submoduleSummary = true
    showUntrackedFiles = all
[tag]
    sort = version:refname
[user]
    name  = Nelson da Costa
    email = ndacosta@eleven-labs.com
