[alias]
    ci = commit
    co = checkout
    df = diff
    st = status
    stp = status --porcelain
    lg = log --oneline --all --graph --decorate --pretty=tformat:'%Cred%h%Creset -%C(cyan)%d %Creset%s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative

    changes = diff --name-status
    wdiff   = diff --word-diff

    # Cancel
    undo    = reset HEAD^ --soft
    unstage = reset HEAD --
    # The -a adds any modifications and deletions of existing files to the commit but ignores brand new files
    amend   = commit -a --amend
[branch]
    autosetuprebase = always
    rebase = true
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta       = yellow
    frag       = magenta
    old        = red
    new        = green
    whitespace = red reverse
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[core]
    whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autocrlf     = input
    editor       = vim
    excludesfile = ~/dotfiles/git/.gitignore
    pager        = less -FRSX
[credential]
    helper = cache --timeout=43200
[diff]
    mnemonicPrefix = true
    renames = true
[format]
    pretty = oneline
[help]
    autocorrect = 1
[init]
    templatedir = ~/dotfiles/git/git-templates
[log]
    abbrevCommit = true
[pull]
    rebase = preserve
[push]
    default = current
[rebase]
    autostash = true
[status]
    submoduleSummary = true
    showUntrackedFiles = all
[tag]
    sort = version:refname
