#[ -r ~/www/dev-tools/ide-php/bin ] && export PATH=$PATH:~/www/dev-tools/ide-php/bin

for file in ~/.{aliases,exports,functions}; do
    [ -r "$file" ] && . "$file"
done

if [ -r ~/www/n.dacosta/dev-env-dotfiles/ssh_config ]; then
    cp ~/www/n.dacosta/dev-env-dotfiles/ssh_config ~/.ssh/config.dev
    sed -e "s/<USERNAME>/ndacosta/g" -i ~/.ssh/config.dev
    sed -e "s/<AD_USERNAME>/n.dacosta/g" -i ~/.ssh/config.dev
fi

git config --global user.name "Nelson DA COSTA"
git config --global user.email "ndacosta@corp.com"
git config --global include.path ~/dotfiles/git/.gitconfig
